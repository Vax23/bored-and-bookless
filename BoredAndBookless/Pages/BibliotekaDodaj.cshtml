@page
@model BoredAndBookless.Pages.BibliotekaDodajModel
@{
    ViewData["Title"] = "Dodavanje biblioteke";
}

<style>
    body {
        background-color: #E6E5E5;
    }
</style>

@if (SessionClass.TipKorisnika == "A")
{
    <form method="post">
        <input type="hidden" asp-for="@Model.PostojiVec" />

        @if (Model.PostojiVec != null && Model.PostojiVec != 0)
        {
            <div class="alert alert-danger" role="alert" style="text-align: center;"><i class="fas fa-exclamation-triangle"></i> Već postoji biblioteka sa tim nazivom. <i class="fas fa-exclamation-triangle"></i></div>
        }

        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item btnSubmit"><a class="btnSubmit" asp-page="./BibliotekaSve"><i class='fas fa-arrow-circle-left'></i> Vrati se nazad</a></li>
            </ul>
        </nav>

        <div class="container register-form">
            <div class="form">
                <div class="note">
                    <p>Nova biblioteka</p>
                </div>

                <div class="form-content">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Naziv" asp-for="NovaBiblioteka.Naziv" required autofocus />
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Grad" asp-for="NovaBiblioteka.Grad" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Opis" asp-for="NovaBiblioteka.Opis" required />
                            </div>
                            <div class="form-group">
                                <div class="form-control">
                                    Slika   <input type="file" asp-for="NovaBiblioteka.Slika" required />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div style="text-align:center">
                        <button type="submit" class="btnSubmit">Dodaj novu biblioteku</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <div class="alert alert-danger" role="alert" style="text-align: center;"><i class="fas fa-exclamation-triangle"></i> Nemate pristup ovoj stranici, samo admin može da dodaje biblioteke. <i class="fas fa-exclamation-triangle"></i></div>
}