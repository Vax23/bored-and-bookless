@page
@model BoredAndBookless.Pages.BibliotekaJednaModel
@{
    ViewData["Title"] = "Biblioteka";
}

<style>
    body {
        background-color: #E6E5E5;
    }
</style>

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item btnSubmit" style="margin:5px;"><a class="btnSubmit" asp-page="./BibliotekaSve"><i class='fas fa-arrow-circle-left'></i> Vrati se nazad</a></li>
    </ul>
</nav>


<div class="centriraj" style="border-radius: 1rem;">
    <div class="card" style="width: 30rem; border-radius: 1rem; background-color: #FAF5EB;">
        <img src="images/@Model.TrenutnaBiblioteka.Slika" class="card-img-top" alt="..." style="border-radius: 1rem;">
        <div class="card-body" style="background-color: #FAF5EB; border-radius: 1rem;">
            <h3 class="card-title" style="color: #56493E;">Biblioteka: @Model.TrenutnaBiblioteka.Naziv</h3>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item" style="background-color: #FAF5EB; color: #56493E; font-size: 20px; "><i class="fas fa-map-marker-alt"></i>   @Model.TrenutnaBiblioteka.Grad</li>
            <li class="list-group-item" style="background-color: #FAF5EB; color: #56493E; font-size: 20px; "> @Model.TrenutnaBiblioteka.Opis</li>
        </ul>
        <div class="card-body" style="background-color: #FAF5EB; border-radius: 1rem; color: #56493E; font-size: 20px;">
            <a class="btnSubmit" asp-route-id="@Model.TrenutnaBiblioteka.Id" asp-page="./KnjigaSve">Pogledaj knjige   <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
</div>
