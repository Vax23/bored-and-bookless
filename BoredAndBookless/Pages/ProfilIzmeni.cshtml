@page
@model BoredAndBookless.Pages.ProfilIzmeniModel
@{
}


@if (SessionClass.TipKorisnika == "K")
{
    <form method="post">

        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item btnSubmit"><a class="btnSubmit" asp-page="./Profil"><i class='fas fa-arrow-circle-left'></i> Vrati se nazad</a></li>
            </ul>
        </nav>

        <div class="container register-form">
            <div class="form">
                <div class="note">
                    <p>Izmeni svoje podatke</p>
                </div>

                <div class="form-content">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Ime" asp-for="TrenutniKorisnik.Ime" required autofocus />
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Email" asp-for="TrenutniKorisnik.Email" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Prezime" asp-for="TrenutniKorisnik.Prezime" required />
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Broj telefona" asp-for="TrenutniKorisnik.Broj" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Korisnicko ime" asp-for="TrenutniKorisnik.Username" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Lozinka" asp-for="TrenutniKorisnik.Password" required />
                            </div>
                        </div>
                    </div>
                    <div style="text-align:center">
                        <button type="submit" class="btnSubmit">Sačuvaj izmene</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <div class="alert alert-danger" role="alert" style="text-align: center;"><i class="fas fa-exclamation-triangle"></i> Nemate pristup ovoj stranici, samo korisnik može da menja svoje podatke. <i class="fas fa-exclamation-triangle"></i></div>
}